{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "dist/server.js",
  "scripts": {
    "start": "yarn run serve",
    "serve": "node dist/server.js",
    "build": "yarn run build-ts",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,TSlint\" -c \"cyan.bold,green.bold,purple.bold\" \"yarn run watch-ts\" \"yarn run watch-node\" \"yarn run watch-tslint\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch-tslint": "chokidar \"./**/*.ts\" -c \"yarn run tslint\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "yarn run tslint --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "somebuddy",
  "license": "MIT",
  "dependencies": {
    "@types/config": "^0.0.34",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "config": "^3.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "request": "^2.88.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/gravatar": "^1.8.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.3.21",
    "@types/node": "^11.10.4",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "chokidar": "^2.1.2",
    "chokidar-cli": "^1.2.2",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.2.0",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  }
}
