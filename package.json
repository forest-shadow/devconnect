{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "dist/server.js",
  "scripts": {
    "start": "yarn run dev-server",
    "server": "node dist/server.js",
    "client": "npm start --prefix client",
    "dev-server": "concurrently -k -p \"[{name}]\" -n \"Server,Client\" -c \"cyan.bold,green.bold\" \"yarn run watch-server\" \"yarn run client\"",
    "build": "tsc",
    "watch-server": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,TSlint\" -c \"cyan.bold,green.bold,purple.bold\" \"yarn run watch-ts\" \"yarn run watch-node\" \"yarn run watch-tslint\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch-tslint": "chokidar \"./src/**/*.ts\" -c \"yarn run tslint\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "yarn run tslint --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "somebuddy",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.11",
    "request": "^2.88.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/gravatar": "^1.8.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.3.21",
    "@types/node": "^11.10.4",
    "@types/request": "^2.48.1",
    "chokidar": "^2.1.2",
    "chokidar-cli": "^1.2.2",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.2.0",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  }
}
