{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "dist/server.js",
  "scripts": {
    "start": "yarn run dev-server",
    "server": "node dist/server.js",
    "client": "npm start --prefix client",
    "dev-server": "concurrently -k -p \"[{name}]\" -n \"Server,Client\" -c \"cyan.bold,green.bold\" \"yarn run watch-server\" \"yarn run client\"",
    "build": "tsc",
    "watch-server": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,TSlint\" -c \"cyan.bold,green.bold,purple.bold\" \"yarn run watch-ts\" \"yarn run watch-node\" \"yarn run watch-tslint\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch-tslint": "chokidar \"./src/**/*.ts\" -c \"yarn run tslint\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "yarn run tslint --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "somebuddy",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "gravatar": "^1.8.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/gravatar": "^1.8.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.10",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  }
}
